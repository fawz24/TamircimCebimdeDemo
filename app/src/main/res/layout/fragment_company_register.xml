<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".CompanyRegisterFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:padding="25dp">

        <EditText android:id="@+id/registerNameCompany"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ad (zorunlu)"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true" />

        <EditText android:id="@+id/registerTitleCompany"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ünvan (zorunlu)"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/registerNameCompany"
            android:layout_marginTop="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true" />

        <EditText
            android:id="@+id/registerSicilNoCompany"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/registerTitleCompany"
            android:hint="Sicil No (zorunlu)"
            android:layout_marginTop="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true" />

        <EditText
            android:id="@+id/registerVergiDairesiCompany"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/registerSicilNoCompany"
            android:hint="Vergi Dairesi (zorunlu)"
            android:layout_marginTop="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true" />

        <EditText
            android:id="@+id/registerVergiDairesiNoCompany"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/registerVergiDairesiCompany"
            android:hint="Vergi Daresi No (zorunlu)"
            android:layout_marginTop="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true" />

        <EditText android:id="@+id/registerEmailCompany"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email (zorunlu)"
            android:layout_centerHorizontal="true"
            android:inputType="textEmailAddress"
            android:layout_below="@id/registerVergiDairesiNoCompany"
            android:layout_marginTop="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true" />

        <EditText android:id="@+id/registerPasswordCompany"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Şifre (zorunlu)"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/registerEmailCompany"
            android:layout_marginTop="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:inputType="textPassword" />

        <EditText android:id="@+id/registerPasswordRepeatCompany"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Şifreyi Tekrarla (zorunlu)"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/registerPasswordCompany"
            android:layout_marginTop="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/registerPhoneCompany"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/registerPasswordRepeatCompany"
            android:hint="Phone"
            android:layout_marginTop="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true" />

        <EditText
            android:id="@+id/registerAddressCompany"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/registerPhoneCompany"
            android:hint="Address"
            android:layout_marginTop="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true" />

        <com.tamirdunyasi.tamircimcebimdedemo.MultiSelectionSpinner
            android:id="@+id/categories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/registerAddressCompany" />

        <Button android:id="@+id/registerButtonCompany"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/categories"
            android:text="@string/register_button"
            android:textColor="@android:color/white"
            android:onClick="registerListener"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:background="@color/colorSecond" />
    </RelativeLayout>
</ScrollView>